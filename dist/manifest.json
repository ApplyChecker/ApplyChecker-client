{
  "manifest_version": 3,
  "name": "원티드 지원현황 매니저",
  "version": "1.0",
  "description": "원티드 지원현황을 관리하는 크롬 익스텐션",
  "icons": {
    "16": "icon256.png",
    "32": "icon256.png",
    "48": "icon256.png",
    "128": "icon256.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "webRequest",
    "storage",
    "identity",
    "identity.email",
    "webNavigation",
    "cookies"
  ],
  "host_permissions": ["https://*.wanted.co.kr/*", "https://*.saramin.co.kr/*"],
  "action": {
    "default_icon": {
      "16": "icon256.png",
      "32": "icon256.png",
      "48": "icon256.png",
      "128": "icon256.png"
    },
    "default_title": "My Extension",
    "default_popup": "popup.html"
  }
}
